<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.efemoney.ussdtoolbox.widget.SquareRoundedFrameLayout
        android:id="@+id/background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:stateListAnimator="@animator/raise"
        android:foreground="?attr/selectableItemBackground"
        tools:background="@color/black_54"
        tools:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.efemoney.ussdtoolbox.widget.FontTextView
            android:id="@+id/name"
            tools:text="Diamond Bank"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <com.efemoney.ussdtoolbox.widget.FavoriteButton
            android:id="@+id/fave"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_fave"
            android:layout_gravity="bottom|right"
            android:layout_width="@dimen/small_touch_target"
            android:layout_height="@dimen/small_touch_target" />

    </com.efemoney.ussdtoolbox.widget.SquareRoundedFrameLayout>

</layout>