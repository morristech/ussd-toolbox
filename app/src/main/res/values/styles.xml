<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="android:fontFamily">@font/regular</item>

        <item name="android:actionBarSize">@dimen/abc_action_bar_default_height_material</item>

    </style>

    <style name="AppTheme.FitsSystemWindows">

    </style>

    <style name="AppTheme.FitsSystemWindows.TransparentStatus">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="AppTheme.ActionBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black_54</item>
    </style>



    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="TextAppearance.Toolbar.Title.Collapsed">

    </style>

    <style name="TextAppearance.Toolbar.Title.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">

    </style>



    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/FontTextAppearance.Title</item>
        <item name="subtitleTextAppearance">@style/FontTextAppearance.Subtitle</item>
    </style>



    <style name="FontTextAppearance.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="FontTextAppearance.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/regular</item>
    </style>

</resources>
